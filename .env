# ComfyUI Environment Configuration
# Generated automatically for headless deployment

# ============================================================================
# COMFYUI CONFIGURATION
# ============================================================================
COMFYUI_PORT=8188
COMFYUI_HOST=0.0.0.0

# ============================================================================
# HEADLESS MODE CONFIGURATION
# ============================================================================
# Set to true to disable progress bars and fix broken pipe issues
DISABLE_PROGRESS_BARS=true
# Set to true to disable auto-launch of browser
DISABLE_AUTO_LAUNCH=true
# Set to true to disable server print messages
DONT_PRINT_SERVER=true
# Disable tqdm progress bars completely
TQDM_DISABLE=1
TQDM_DISABLE_PROGRESS_BAR=1
# Ensure unbuffered output
PYTHONUNBUFFERED=1

# ============================================================================
# MODEL DOWNLOAD CONFIGURATION
# ============================================================================
MODEL_DOWNLOAD_ENABLED=true
AUTO_DOWNLOAD_MODELS=false

# ============================================================================
# REMOTE DEPLOYMENT CONFIGURATION
# ============================================================================
# Set to true if this ComfyUI instance will be accessed remotely
REMOTE_ACCESS_ENABLED=false
# API key for remote access (optional but recommended)
COMFYUI_API_KEY=
# CORS settings for remote access
CORS_ORIGINS=*

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
# GPU memory management
CUDA_VISIBLE_DEVICES=0
# Disable progress bars for better headless performance
TQDM_MINITERS=0
TQDM_MAXITERS=0
TQDM_POSITION=0
TQDM_LEAVE=false
TQDM_NCOLS=0
TQDM_DESC=
TQDM_UNIT=
TQDM_UNIT_SCALE=false
TQDM_RATE=0
TQDM_POSTFIX=
TQDM_BAR_FORMAT=
TQDM_SMOOTHING=0
TQDM_DYNAMIC_NCOLS=false
TQDM_ASCII=true
TQDM_DISABLE_TQDM=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Enable debug logging
DEBUG=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Enable CORS for remote access
ENABLE_CORS=true
# Trusted origins for CORS
TRUSTED_ORIGINS=*

# ============================================================================
# OPTIONAL: CUSTOM MODEL PATHS
# ============================================================================
# COMFYUI_EXTRA_MODEL_PATHS=/app/extra_model_paths.yaml

# ============================================================================
# API KEYS (optional but recommended for better rate limits and private models)
# ============================================================================
HUGGINGFACE_HUB_TOKEN=
CIVITAI_API_KEY=
